{% extends 'base.html.twig' %}

{% block title %}Hello ProfController!{% endblock %}

{% block body %}

<table class="table  table-striped  mt-5">
    <tr class="bg-primary">
        <th>Nom complet</th>
        <th>Grade</th>
    </tr>
    {% for prof in professeurs %}
        <tr>
            <td>{{prof.nomComplet}}</td>
            <td>{{prof.grade}}</td>
        </tr>
    {% endfor %}
</table>
<div class="navigation">
    {{ knp_pagination_render(professeurs) }}
</div>
{% endblock %}