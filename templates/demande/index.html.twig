{% extends 'base.html.twig' %}

{% block title %}Hello DemandeController!{% endblock %}

{% block body %}

<table class="table  table-striped  mt-5">
    <tr class="bg-info">
        <th>#</th>
        <th>Student's Name</th>
        <th>RP's Name</th>
        <th>Motif</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    {%set i=0 %}
    {% for demande in demandes %}
        <tr>
            <td>{% set i=i+1 %}{{i}}</td>
            <td>{{demande.etudiant.nomComplet}}</td>
            <td>{{demande.rp.nomComplet}}</td>
            <td>{{demande.motif}}</td>
            <td>{{demande.date|date}}</td>
            <td  class="text-center">
                <a class="btn btn-warning btn-sm">Modifier</a>
                <a class="btn btn-danger btn-sm">Supprimer</a>
                <a href="/professeur/<?=$ins->id?>" class="btn btn-outline-primary btn-sm " >Details</a>
            </td>
        </tr>
    {% endfor %}
</table>
<div class="navigation d-flex justify-content-center">
    {{ knp_pagination_render(demandes) }}
</div>
{% endblock %}