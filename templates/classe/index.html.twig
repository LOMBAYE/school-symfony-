{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
<div class="row d-flex justify-content-around">
<h1>{{ title }}</h1>
<a class="nav-link  bg-primary text-white offset-6" href="{{path('add_classe')}}">Ajouter une classe</a>
</div>
<table class="table  table-striped  mt-5">
    <tr class="bg-primary">
        <th>#</th>
        <th>RP's Name</th>
        <th>RP's Login</th>
        <th>Filiere</th>
        <th>Niveau</th>
        <th>Libelle</th>
        <th>Actions</th>
    </tr>
    {%set i=0 %}
    {% for classe in classes %}
        <tr>
            <td>{% set i=i+1 %}{{i}}</td>
            <td>{{classe.rp.nomComplet}}</td>
            <td>{{classe.rp.login}}</td>
            <td>{{classe.filiere}}</td>
            <td>{{classe.niveau}}</td>
            <td>{{classe.libelle}}</td>
            <td  class="text-center">
                <a class="btn btn-warning btn-sm">Modifier</a>
                <a class="btn btn-danger btn-sm">Supprimer</a>
                <a href="/professeur/<?=$ins->id?>" class="btn btn-outline-primary btn-sm " >Details</a>
            </td>
        </tr>
    {% endfor %}
</table>
<div class="navigation d-flex justify-content-center">
    {{ knp_pagination_render(classes) }}
</div>
</div>
{% endblock %}